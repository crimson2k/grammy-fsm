{
  "name": "grammy-fsm",
  "version": "0.3.0",
  "description": "Finite State Machine (FSM) plugin for Grammy Telegram bot framework with type-safe state management",
  "keywords": [
    "grammy",
    "telegram",
    "bot",
    "fsm",
    "state-machine",
    "finite-state-machine",
    "state-management",
    "typescript"
  ],
  "author": "crimson2k",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crimson2k/grammy-fsm.git"
  },
  "bugs": {
    "url": "https://github.com/crimson2k/grammy-fsm/issues"
  },
  "homepage": "https://github.com/crimson2k/grammy-fsm#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "grammy": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "grammy": "^1.0.0",
    "typescript": "^5"
  }
}
